    "version": "2.0.0",
    "tasks": [
        {
            "label": "Exe cmake",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "cmake",
            "args": [
                "${workspaceRoot}"
            ]
        },
        {
            "label": "Make -single threaded",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make",
            "args": [
                ""
            ]
        },
        {
            "label": "Make -8 threaded",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make",
            "args": [
                "-j8"
            ]
        },
        {
            "label": "echo",
            "type": "shell",
            "command": "echo Hello",
            
        }
    ]
